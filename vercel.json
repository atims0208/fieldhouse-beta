{
  "version": 2,
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.fieldhouse.example.com/api"
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./api/",
  "outputDirectory": ".next"
} 